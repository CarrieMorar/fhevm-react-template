{
  "name": "fhevm-react-template",
  "version": "2.0.0",
  "description": "Universal FHEVM SDK - Framework-agnostic toolkit for building confidential dApps",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build:sdk && npm run build:examples",
    "build:sdk": "cd packages/fhevm-sdk && npm run build",
    "build:examples": "npm run build:nextjs",
    "build:nextjs": "cd examples/nextjs-legal-consultation && npm run build",
    "dev": "concurrently \"npm run dev:sdk\" \"npm run dev:nextjs\"",
    "dev:sdk": "cd packages/fhevm-sdk && npm run dev",
    "dev:nextjs": "cd examples/nextjs-legal-consultation && npm run dev",
    "dev:node": "cd examples/vanilla-node && node index.js",
    "test": "npm run test:sdk",
    "test:sdk": "cd packages/fhevm-sdk && npm run test",
    "lint": "npm run lint:sdk && npm run lint:examples",
    "lint:sdk": "cd packages/fhevm-sdk && npm run lint",
    "lint:examples": "cd examples/nextjs-legal-consultation && npm run lint",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist examples/*/node_modules examples/*/.next",
    "setup": "npm install && npm run build:sdk",
    "deploy": "cd examples/nextjs-legal-consultation && vercel --prod"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/fhevm-react-template.git"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "homomorphic-encryption",
    "zama",
    "ethereum",
    "privacy",
    "sdk",
    "react",
    "nextjs",
    "typescript",
    "bounty"
  ],
  "author": "FHEVM SDK Contributors",
  "license": "MIT"
}
